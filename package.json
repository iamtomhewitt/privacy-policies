{
    "name": "privacy-policies",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "react-scripts build",
        "commitmsg": "validate-commit-msg",
        "deploy": "gh-pages -d build",
        "eject": "react-scripts eject",
        "lint": "eslint src/",
        "lint-all": "npm run lint-fix && npm run lint-sass",
        "lint-fix": "eslint src/ --fix",
        "lint-sass": "sass-lint 'src/**/*.scss' --verbose --no-exit",
        "predeploy": "yarn run build",
        "release": "npm run deploy && github-releaser",
        "github-releaser": "github-releaser",
        "start": "react-scripts start"
    },
    "dependencies": {
        "gh-pages": "^2.2.0",
        "github-releaser": "^1.5.0",
        "node-sass": "^4.14.1",
        "prop-types": "^15.7.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^3.4.3",
        "sass-lint": "^1.13.1"
    },
    "repository": {
        "apiUrl": "https://api.github.com/repos/iamtomhewitt/privacy-policies"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "homepage": "https://iamtomhewitt.github.io/privacy-policies",
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^10.0.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^24.9.0",
        "cz-conventional-changelog": "^2.1.0",
        "dot-prop": "^5.3.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "enzyme-to-json": "^3.6.1",
        "eslint": "^6.6.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "husky": "^1.1.2",
        "object-path": ">=0.11.5",
        "serialize-javascript": "^5.0.1",
        "typescript": "^3.9.7",
        "validate-commit-msg": "^2.14.0",
        "websocket-extensions": ">=0.1.4"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}